@model FADemo.Models.Account.ResetUserPassword

@{
    ViewBag.Title = "ResetUserPassword";
}

<h1>ResetUserPassword</h1>

<form asp-controller="User" asp-action="ResetUserPassword" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" disabled class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Reset</button>
            <a asp-controller="User" asp-action="ListUsers" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}